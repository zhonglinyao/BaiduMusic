<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title_local_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_author_local_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_local_music"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_album_local_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_author_local_music"
        android:layout_alignBottom="@+id/tv_author_local_music"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:maxLength="20"
        android:enabled="true"
        android:ellipsize="end"/>
</RelativeLayout>